


<div class="albums-index d-flex justify-content-between mx-5 my-3">
  <h2>Albums</h2>
  <%= link_to "New Album", new_album_path, class: "btn btn-flat bg-dark text-white" %>
</div>

<div class="row gap-2 d-flex justify-content-center">

  <% if @albums.any? %>
    <% @albums.each do |album| %>

      <div class="col-xl-2 col-lg-3 col-md-4 col-sm-4 col-4">

        <%= link_to album_path(album), class: "text-decoration-none" do %>

          <div class="card">
            <%= cl_image_tag album.photo.key, class: "card-img-top", width: 300, crop: :fill %>
            <div class="card-body">
              <h5 class="text-decoration-none"><%= album.title %></h5>
              <p class="text-decoration-none"><%= album.artist %></p>
              <p class="text-decoration-none"><%= album.genre %></p>
              <p class="text-decoration-none"><%= album.year %></p>
              <p class="text-decoration-none">Â£<%= album.price %>0</p>

              <div class="d-flex justify-content-end gap-1">
                <%= button_to "Edit", edit_album_path(album), method: :get, class: 'text-white bg-dark rounded' %>
                <%= button_to "delete", album_path(album), method: :delete, data: { confirm: "Are you sure you want to remove #{album.title}?"}, class: 'text-white bg-dark rounded' %>
              </div>
            </div>
          </div>

        <% end %>

      </div>
    <% end %>
  <% else %>
    <h6>No albums to show.</h6>
  <% end %>
</div>
